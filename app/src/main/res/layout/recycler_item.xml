<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCard"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    android:elevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="108dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/recImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:background="@drawable/rectangle"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/recTitle"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/recImage"
            android:text="Trek Name"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/recLoc"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_below="@+id/recTitle"
            android:layout_marginStart="130dp"
            android:layout_marginTop="0dp"
            android:text="Location"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/recRat"
            android:layout_width="140dp"
            android:layout_height="20dp"
            android:layout_below="@+id/recLoc"
            android:layout_alignStart="@+id/recLoc"
            android:layout_alignEnd="@+id/recLoc"
            android:layout_marginStart="2dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="-63dp"
            android:text="Rating"
            android:textColor="@color/black"
            android:textSize="16sp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>